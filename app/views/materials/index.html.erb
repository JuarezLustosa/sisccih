<%= render "header" %>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Lista de todos os materiais registrados</h5>
          <div class="ibox-tools">
            <%= link_to "Cadastrar materiais", new_material_path, class: "btn btn-primary btn-xs" %>
          </div>
        </div>

        <div class="ibox-content">
          <div class="row m-b-sm m-t-sm">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
              <div class="search-form">
                  <%= search_form_for @q,
                      :builder => SimpleForm::FormBuilder,
                      wrapper: :horizontal_form,
                      html: { class: "form-horizontal" } do |f| %>

                    <div class="form-group">
                      <div class="input-group m-b">
                        <span class="input-group-btn">
                          <%= link_to "Refresh", materials_path, class: "btn btn-sm btn-primary" %>
                        </span>
                        <%= f.input_field :description_or_id_cont, placeholder: "Pesquisar pelo material ou pelo cÃ³digo", class: "form-control input-sm" %>
                        <span class="input-group-btn">
                          <%= f.button :submit, "Pesquisar", class: "btn btn-sm btn-primary" %>
                        </span>
                      </div>
                    </div>
                  <div class="hr-line-dashed"></div>
                  <% end %>
              </div>
            </div>
          </div>
          <div class="project-list">
            <%= render partial: "materials" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


