<table class="table table-hover" id="materials">
  <tbody>
    <% @materials.each do |material| %>
      <tr>

        <td class="project-title">
          <span class="badge badge-info">CÃ³digo <%= material.id %></span>
        </td>

        <td class="contact-type"><i class="fa fa-building-o"> </i></td>
        <td class="project-badge title">
          <%= link_to "#{material.description}", materials_path%>
          <br />
          <small>Criado em <%=l material.created_at %></small>
        </td>

        <td class="project-actions">
          <%= link_to edit_material_path(material), class: "btn btn-white btn-sm" do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
        </td>

        <td class="project-actions">
          <%= link_to material,
                class: "btn btn-white btn-sm",
                method: :delete,
                data: { confirm: "Tem certeza que deseja apagar"} do %>
            <i class="fa fa-trash"></i> Apagar
          <% end %>
        </td>
      </tr>
    <% end %>
    <% unless @materials.any? %>
      <div class="ibox-content">
        <div class="alert alert-warning">
          Nenhum material encontrado, deseja <%= link_to "Cadastrar", new_material_path %> ?
        </div>
      </div>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <ul class="pagination pull-right">
          <%= will_paginate @materials, renderer: BootstrapPagination::Rails %>
        </ul>
      </td>
    </tr>
  </tfoot>

</table>
