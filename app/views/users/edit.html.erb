<%= render "header" %>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">

      <div class="ibox-title">
        <h5>Editar Usuário<span class="label label-primary"><%= @user.username %></span></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>

        <div class="ibox-content">
        <%= simple_form_for @user,
          url: users_admin_path(@user),
          html: {class: "form-horizontal"},
          wrapper: :horizontal_form do |f| %>

          <%= f.error_notification %>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.input :username, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <%= f.input :email, class: "form-control" %>
            </div>
          </div>

          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.input :password, autocomplete: "off", hint: "Para não alterar, favor deixar em branco", required: false, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <%= f.input :password_confirmation, required: false, class: "form-control" %>
            </div>
          </div>

          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.input :current_password, hint: "Precisamos da sua senha para que possamos editar o usuário", required: true %>

            </div>
          </div>


           <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%= link_to "Cancelar", users_admin_index_path, :class => 'btn btn-white' %>
              <%= f.button :submit, "Salvar", :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
