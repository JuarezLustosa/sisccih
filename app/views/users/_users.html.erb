<table class="table table-hover">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="project-status">
          <span class="label label-primary">Ativo</span>
        </td>
        <td class="contact-type"><i class="fa fa-user"> </i></td>
        <td class="project-title">
        <%= link_to "#{user.username}", users_admin_path(user)%>
        <br />
        <small>Criado em <%=l user.created_at %></small>
        </td>

        <td class="contact-type"><i class="fa fa-envelope"> </i></td>
        <td> <%= user.email %></td>

        <td class="project-actions">
          <%= link_to edit_users_admin_path(user), class: "btn btn-white btn-sm" do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
        </td>
      </tr>
    <% end %>
    <% unless @users.any? %>
      <div class="ibox-content">
        <div class="alert alert-warning">
          Infelizmente não foram encontrado usuários com esse nome.
        </div>
      </div>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <ul class="pagination pull-right">
          <%= will_paginate @users , renderer: BootstrapPagination::Rails %>
        </ul>
      </td>
    </tr>
  </tfoot>

</table>
