<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Basic Form</h2>
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li><a>Forms</a></li>
      <li class="active"><strong>Basic Form</strong></li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">

      <div class="ibox-title">
        <h5>Cadastrar Usu√°rio</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>

      <div class="ibox-content">
        <%= simple_form_for @user, url: users_admin_index_path(@user), html: {class: "form-horizontal"},
wrapper: :horizontal_form do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.label :username, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.input :username, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <div class="input-group m-b"><span class="input-group-addon">@</span>
                <%= f.input_field :email, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.input_field :password, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.input :password_confirmation, class: "form-control" %>
            </div>
          </div>

           <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%= link_to "Cancelar", users_admin_index_path, :class => 'btn btn-white' %>
              <%= f.button :submit, "Salvar", :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
