<table class="table table-hover" id="units">
  <tbody>
    <% @units.each do |unit| %>
      <tr>

        <td class="project-title">
          <span class="badge badge-info">CÃ³digo <%= unit.id %></span>
        </td>

        <td class="contact-type"><i class="fa fa-building-o"> </i></td>
        <td class="project-badge title">
          <%= link_to "#{unit.description}", units_path%>
          <br />
          <small>Criado em <%=l unit.created_at %></small>
        </td>

        <td class="project-actions">
          <%= link_to edit_unit_path(unit), class: "btn btn-white btn-sm" do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
        </td>

        <td class="project-actions">
          <%= link_to unit,
                class: "btn btn-white btn-sm",
                method: :delete,
                data: { confirm: "Tem certeza que deseja apagar"} do %>
            <i class="fa fa-trash"></i> Apagar
          <% end %>
        </td>
      </tr>
    <% end %>
    <% unless @units.any? %>
      <div class="ibox-content">
        <div class="alert alert-warning">
          Nenhuma unidade encontrada, deseja <%= link_to "Cadastrar", new_unit_path %> ?
        </div>
      </div>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <ul class="pagination pull-right">
          <%= will_paginate @units, renderer: BootstrapPagination::Rails %>
        </ul>
      </td>
    </tr>
  </tfoot>
</table>
