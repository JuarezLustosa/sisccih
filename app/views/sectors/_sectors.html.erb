<table class="table table-hover" id="sectors">
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>

        <td class="project-title">
          <span class="badge badge-info">Código <%= sector.id %></span>
        </td>

        <td class="contact-type"><i class="fa fa-building-o"> </i></td>
        <td class="project-badge title">
          <%= link_to "#{sector.name}", sectors_path%>
          <br />
          <small>Criado em <%=l sector.created_at %></small>
        </td>

        <td class="project-actions">
          <%= link_to edit_sector_path(sector), class: "btn btn-white btn-sm" do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
        </td>

        <td class="project-actions">
          <%= link_to sector,
                class: "btn btn-white btn-sm",
                method: :delete,
                data: { confirm: "Tem certeza que deseja apagar"} do %>
            <i class="fa fa-trash"></i> Apagar
          <% end %>
        </td>
      </tr>
    <% end %>
    <% unless @sectors.any? %>
      <div class="ibox-content">
        <div class="alert alert-warning">
          Nenhum serviço encontrado, deseja <%= link_to "Cadastrar", new_sector_path %> ?
        </div>
      </div>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <ul class="pagination pull-right">
          <%= will_paginate @sectors, renderer: BootstrapPagination::Rails %>
        </ul>
      </td>
    </tr>
  </tfoot>

</table>
